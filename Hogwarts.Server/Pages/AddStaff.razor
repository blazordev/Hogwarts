@page "/AddStaff"
@inherits AddStaffBase



<EditForm Model="@Staff" OnValidSubmit="@HandleValidSubmit" class="card col-md-6 offset-3">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label class="col-4 col-form-label">First Name</label>
        <div class="col-8">
            <InputText @bind-Value="@Staff.FirstName" placeholder="First Name" type="text" class="form-control"></InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Staff.FirstName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="text" class="col-4 col-form-label">(Middle Names)</label>
        <div class="col-8">
            <InputText @bind-Value="@Staff.MiddleNames" placeholder="Middle Names" type="text" class="form-control"></InputText>
            <ValidationMessage class="text-light" For="@(() => Staff.MiddleNames)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="text2" class="col-4 col-form-label">Last Name</label>
        <div class="col-8">
            <InputText @bind-Value="@Staff.LastName" placeholder="Last Name" type="text" class="form-control"></InputText>
            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Staff.LastName)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="text2" class="col-4 col-form-label">Select Roles</label>
        <div class="col-8">
            @for (int i = 0; i < Roles.Count(); i++)
            {
                <div class="custom-control custom-checkbox custom-control-inline">
                    <input name="checkbox" id="checkbox_@i" type="checkbox" class="custom-control-input">
                    <label for="checkbox_@i" class="custom-control-label">@Roles[i].Name</label>
                </div>
            }
        </div>
    </div>
    @if(DisplayCourses)
    {
        <h1>Ask to choose courses here</h1>
    }


    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn">Submit</button>
        </div>
    </div>
</EditForm>
