@using Hogwarts.Data.Models;
@foreach (var role in Staff.Roles)
{
    @if (role.Id == 1)
    {
        if (Staff.Gender == Data.Gender.Female)
        {
            <div class="shallow-shadow label gradient" style="color:dimgray !important">HEADMISTRESS</div>
        }
        else
        {
            <div class="shallow-shadow label gradient" style="color:dimgray !important">HEADMASTER</div>
        }
    }
    else if (role.Id == 2)
    {
        if (Staff.Gender == Data.Gender.Female)
        {
            <div class="shallow-shadow label gradient">DEPUTY HEADMISTRESS</div>
        }
        else
        {
            <div class="shallow-shadow label gradient">DEPUTY HEADMASTER</div>
        }
    }
    else if (role.Id == 4)
    {
        if (Staff.Gender == Data.Gender.Female)
        {
            <div class="shallow-shadow label gradient">MATRON</div>
        }
        else
        {
            <div class="shallow-shadow label gradient">PATRON</div>
        }
    }
    else
    {
        <div class="shallow-shadow label gradient">@role.Name.ToUpper()</div>

    }
}
@code{
    [Parameter] public StaffDto Staff { get; set; }
}
