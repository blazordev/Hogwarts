@page "/staffList"


@if (Staff == null)
{
    <div class="offset-5"><div class="lds-ripple"><div></div><div></div></div></div>
}
else
{
<div class="card" style="padding:10px">
    <div class="custom-control-inline">
        <button @onclick="AddPage" class="btn borderLeftRight btn-sm"><span><i class="fas fa-plus"></i></span> Add</button>
        <button class="btn borderLeftRight btn-sm"><span><i class="fas fa-edit"></i></span> Edit</button>
        <button class="btn borderLeftRight btn-sm"><span><i class="fas fa-trash"></i></span> Delete</button>
        <input @bind-value="SearchTerm" @bind-value:event="oninput" id="search" class="form-control input-group-sm mx-1 col-md-3 inline-form" placeholder="Search Name" type="text">
        <select class="input-group-sm col-md-3 form-control inline-form" @onchange="RoleSelected">
            <option value="0" selected>Roles</option>
            @foreach (var role in Roles)
            {
                <option value="@role.Id">@role.Name</option>
            }
        </select>
    </div>
    <table class="table table-striped table-bordered table-sm table-hover table-responsive-sm">
        <thead>
            <tr>
                <th class="table-checkbox-row">
                    <label class="table-checkbox-label">
                        <input type="checkbox" @onchange="ToggleAllChecked" />
                        <span class="table-checkbox-span"></span>
                    </label>
                </th>
                <th class="small text-center">ID</th>
                <th class="small"><span> FIRST NAME</span></th>
                <th class="small">
                    <span>LAST NAME</span>
                </th>
                <th class="small">
                </th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < FilteredStaff.Count; i++)
            {
                var index = i;
                <StaffRow Staff="FilteredStaff[index]"></StaffRow>
            }
        </tbody>
    </table>
    @if (!FilteredStaff.Any())
    {
        <p>There are no records to display</p>
    }
</div>
}


