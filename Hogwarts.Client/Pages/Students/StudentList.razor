@page "/students"

@if (Students == null)
{
    <div style="vertical-align:middle"><div class="lds-ripple"><div></div><div></div></div></div>
}
else
{
<div class="card">
    <div class="card-header">
        <h4>Students</h4>
    </div>
    <div class="custom-control-inline">
        <button class="btn btn-sm"><span><i class="fas fa-plus"></i></span> Add</button>
        <button class="btn btn-sm"><span><i class="fas fa-edit"></i></span> Edit</button>
        <button class="btn btn-sm"><span><i class="fas fa-trash"></i></span> Delete</button>
        <button class="btn btn-sm"><span><i class="fas fa-save"></i></span> Save</button>
        <button class="btn btn-sm"><span><i class="fas fa-times"></i></span> Cancel</button>
        <button style="margin-right:8px;" class="btn btn-sm"><span><i class="fas fa-file-export"></i></span> Export</button>
    </div>
    <div class="custom-control-inline">
        <input @bind="_studentParameters.SearchQuery" id="search" class="form-control input-group-sm mx-1 col-md-3 inline-form" placeholder="Name" type="text">
        <select class="input-group-sm form-control col-md-3" @bind="_studentParameters.HouseId">
            <option value="0" selected>House</option>
            @foreach (var house in Houses)
                {
                    <option value="@house.Id">@house.Name</option>
                }
        </select>
        <button @onclick="PreformSearch" class="btn"><span><i class="fas fa-search"></i></span> Search</button>

    </div>

    <div class="tableFixHead">
        <table class="table table-striped table-bordered table-sm table-hover table-responsive-sm">
            <thead>
                <tr>
                    <th class="table-checkbox-row">
                        <label class="table-checkbox-label">
                            <input type="checkbox" @bind-value="FirstIsChecked" checked="@FirstIsChecked" />
                            <span class="table-checkbox-span"></span>
                        </label>
                    </th>
                    <th class="small text-center">ID</th>
                    <th class="small"><span> First Name</span></th>
                    <th class="small">
                        <span>Last Name</span>
                    </th>
                    <th>House</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Students.Count; i++)
                {
                    var index = i;
                    @*tr highlight isnt working (css conflict?) have to do every td*@
                    <tr style="@(Students[index].IsChecked ? " background-color:#ffede3 !important;" : "")" @key="Students[index].Id" @onclick="() => Students[index].IsChecked = !Students[index].IsChecked">
                        <td class="table-checkbox-row">
                            <label class="table-checkbox-label">
                                @*error when using bind*@
                                <input type="checkbox" @onclick="() => Students[index].IsChecked = !Students[index].IsChecked" checked="@Students[index].IsChecked" />
                                <span class="table-checkbox-span"></span>
                            </label>
                        </td>
                        <td class="text-sm-center">@Students[index].Id</td>
                        <td><span class="ml-1">@Students[index].FirstName @Students[index].MiddleNames</span> </td>
                        <td><span class="ml-1">@Students[index].LastName</span> </td>
                        <td><span class="ml-1">@Students[index].HouseName</span> </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (!Students.Any())
    {
        <p>There are no records to display</p>
    }
    else
    {
        <Pagination MetaData="PaginationMetadata" Spread="2" SelectedPage="SelectedPage" />
    }
</div>
}